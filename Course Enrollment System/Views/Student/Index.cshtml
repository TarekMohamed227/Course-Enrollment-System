@model IEnumerable<DAL.Models.Student>

<h2>Students</h2>

<a asp-action="Create" class="btn btn-primary">Add New Student</a>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Birthdate</th>
            <th>National ID</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.Email</td>
                <td>@student.BirthDate.ToShortDateString()</td>
                <td>@student.NationalId</td>
                <td>@student.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
