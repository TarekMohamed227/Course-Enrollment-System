@model DAL.Models.Student

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Full Name</label>
        <input asp-for="FullName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required type="email" />
    </div>
    <div class="form-group">
        <label>Birthdate</label>
        <input asp-for="BirthDate" class="form-control" type="date" required />
    </div>
    <div class="form-group">
        <label>National ID</label>
        <input asp-for="NationalId" class="form-control" required maxlength="14" />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" maxlength="11" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
